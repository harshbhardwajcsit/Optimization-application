<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res/android"

    android:id="@+id/LayoutView"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="5dp">





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/homemainbanner"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:gravity="center">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50">

            <LinearLayout


            android:orientation="vertical"
            android:layout_width="0dp"
            android:clickable="true"

            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:id="@+id/lvmedicalWallet3">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="200dp"


                android:background="?android:attr/selectableItemBackground"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"




                >

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/homebgone" />

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:background="#F29C28AF">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                           >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView3"
                                android:src="@drawable/homewallet" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Donate Blood"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="5dp" />
                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>



            </android.support.v7.widget.CardView>
              </LinearLayout>

                <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:clickable="true"

            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:id="@+id/lvmedicalWallet">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="200dp"


                android:background="?android:attr/selectableItemBackground"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"



                >

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/homebgone" />

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:background="#F2FE5722">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView4"
                                android:src="@drawable/homewallet" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Request Blood"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="5dp" />
                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>



            </android.support.v7.widget.CardView>



            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50">



           <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:clickable="true"

            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:id="@+id/lvmedicalWallet5">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="200dp"


                android:background="?android:attr/selectableItemBackground"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"


                >

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/homebgthree" />

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:background="#F14BAF4F">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView"
                                android:src="@drawable/homesearch" />

                       <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Search Nearby"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="5dp" />
                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>



            </android.support.v7.widget.CardView>



               </LinearLayout>

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:clickable="true"

            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:id="@+id/lvmedicalWallet2">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="200dp"


                android:background="?android:attr/selectableItemBackground"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"



                >

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/homebgone" />

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:background="#F1F8BC06">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/View4"
                                android:src="@drawable/plusnew" />

                      <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Ask Doctor!"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="5dp" />
                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>



            </android.support.v7.widget.CardView>



            </LinearLayout>

        </LinearLayout>

     </LinearLayout>





</LinearLayout>