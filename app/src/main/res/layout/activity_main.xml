<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:elevation="7dp">


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#fafafa"
        android:id="@+id/LayoutView">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.28"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/homemainbanner"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.72"
            android:gravity="center">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.50">

                <LinearLayout


                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:clickable="true"

                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:id="@+id/lvmedicalWallet3">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view4"
                        android:layout_gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"


                        android:background="?android:attr/selectableItemBackground"
                        android:layout_margin="0dp"
                        android:elevation="10dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"




                        >

                        <RelativeLayout
                            android:scaleType="fitXY"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bloodd" />

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:gravity="center"
                                android:background="#F29C28AF">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/imageView3"
                                        android:src="@drawable/homewallet" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="Donate Blood"
                                        android:textColor="@android:color/white"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>

                            </RelativeLayout>


                        </RelativeLayout>



                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:clickable="true"

                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:id="@+id/lvmedicalWallet">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view3"
                        android:layout_gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"


                        android:background="?android:attr/selectableItemBackground"
                        android:layout_margin="0dp"
                        android:elevation="10dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"



                        >

                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/req" />

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:gravity="center"
                                android:background="#F2FE5722">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/imageView4"
                                        android:src="@drawable/homewallet" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="Request Blood"
                                        android:textColor="@android:color/white"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>

                            </RelativeLayout>


                        </RelativeLayout>



                    </android.support.v7.widget.CardView>



                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.50">



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:clickable="true"

                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:id="@+id/lvmedicalWallet5">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view1"
                        android:layout_gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"


                        android:background="?android:attr/selectableItemBackground"
                        android:layout_margin="0dp"
                        android:elevation="10dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"


                        >

                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/homebgthree" />

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:gravity="center"
                                android:background="#F14BAF4F">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/imageView"
                                        android:src="@drawable/homesearch" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="Search Nearby"
                                        android:textColor="@android:color/white"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>

                            </RelativeLayout>


                        </RelativeLayout>



                    </android.support.v7.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:clickable="true"

                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:id="@+id/lvmedicalWallet2">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view2"
                        android:layout_gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"


                        android:background="?android:attr/selectableItemBackground"
                        android:layout_margin="0dp"
                        android:elevation="10dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"



                        >

                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView

                                android:id="@+id/askdoc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/askdoc" />

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/activestatus"
                                android:gravity="center"
                                android:background="#F1F8BC06">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/View4"
                                        android:src="@drawable/call" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="Active Status!"
                                        android:textColor="@android:color/white"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>

                            </RelativeLayout>


                        </RelativeLayout>



                    </android.support.v7.widget.CardView>



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"

        android:background="#ffffff"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>


</android.support.v4.widget.DrawerLayout>
